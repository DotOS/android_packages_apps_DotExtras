<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/statusbar">

    <Preference
        android:fragment="com.dot.dotextras.MiscExtras"
        android:icon="@drawable/ic_misc_extras"
        android:key="misc_extras"
        android:title="@string/misc_extras_title" />

    <Preference
        android:fragment="com.dot.dotextras.fragments.StatusBarBattery"
        android:key="battery_settings"
		android:icon="@drawable/ic_battery_styles"
        android:summary="@string/battery_style_category_summary"
        android:title="@string/battery_style_category_title" />

    <Preference
        android:key="clock_settings"
		android:icon="@drawable/ic_clock_styles"
        android:title="@string/clock_style_category_title"
        android:summary="@string/clock_style_category_summary"
        android:fragment="com.dot.dotextras.fragments.ClockSettings" />

    <Preference
        android:fragment="com.dot.dotextras.fragments.Traffic"
        android:icon="@drawable/ic_traffic"
        android:key="traffic"
        android:title="@string/traffic_title" />

    <Preference
        android:icon="@drawable/ic_systemui_tuner_statusbaritems"
        android:key="systemui_tuner_statusbar"
        android:title="@string/statusbar_items_category">

        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity"
            android:targetPackage="com.android.systemui" />
    </Preference>
	
	<com.dot.dotextras.preference.SystemSettingSwitchPreference
             android:key="status_bar_logo"
             android:title="@string/dot_logo_title"
             android:summary="@string/dot_logo_summary"
             android:defaultValue="false"/>

</PreferenceScreen>
