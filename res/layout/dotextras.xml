<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_head_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/go_back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/colorAccent"
                android:clickable="true">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:tint="?android:attr/textColorPrimary"
                    app:srcCompat="@drawable/ic_left" />

                <TextView
                    android:id="@+id/txt_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="22dp"
                    android:text="Go back"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/features_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <com.dot.dotextras.views.HeadCards
                android:id="@+id/statusbar_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:image="@drawable/statusbar"
                app:title="Statusbar">

            </com.dot.dotextras.views.HeadCards>

            <com.dot.dotextras.views.HeadCards
                android:id="@+id/navigation_bar_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:image="@drawable/navbar"
                app:title="Navigation Bar">

            </com.dot.dotextras.views.HeadCards>

            <com.dot.dotextras.views.HeadCards
                android:id="@+id/quick_settings_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:image="@drawable/quicksettings"
                app:title="Quick Settings">

            </com.dot.dotextras.views.HeadCards>

            <com.dot.dotextras.views.HeadCards
                android:id="@+id/recents_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:image="@drawable/recents"
                app:title="Recents">

            </com.dot.dotextras.views.HeadCards>

            <com.dot.dotextras.views.HeadCards
                android:id="@+id/lockscreen_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:image="@drawable/lockscreen"
                app:title="Lockscreen">

            </com.dot.dotextras.views.HeadCards>

            <com.dot.dotextras.views.HeadCards
                android:id="@+id/system_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:image="@drawable/system"
                app:title="System">

            </com.dot.dotextras.views.HeadCards>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
